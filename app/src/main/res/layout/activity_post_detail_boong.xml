<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postDetailBoong">
    <TextView
        android:id="@+id/boongzza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="붕짜게시판"
        android:textSize="22sp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/boongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="15sp"
        android:layout_below="@+id/boongzza"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/boongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="20sp"
        android:layout_below="@+id/boongName"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/boongzza"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textSize="18sp"
        android:layout_below="@+id/boongTitle"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_below="@+id/boongTitle"
        android:layout_toEndOf="@+id/date"/>
    <TextView
        android:id="@+id/b_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textSize="18sp"
        android:layout_below="@+id/date"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_below="@+id/date"
        android:layout_toEndOf="@+id/b_time"/>
    <TextView
        android:id="@+id/b_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원수"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/b_time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/b_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/b_people"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="18sp"
        android:layout_below="@+id/b_gender"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>