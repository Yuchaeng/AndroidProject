<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:clickable="false"
            android:focusable="false"
            android:id="@+id/ingBtn"
            android:layout_width="55dp"
            android:layout_height="22dp"
            android:text="모집중"
            android:layout_marginLeft="15dp"
            android:textSize="11dp"
            android:background="@drawable/btn_shape_purple"
            android:layout_marginTop="5dp"/>

        <Button
            android:clickable="false"
            android:focusable="false"
            android:id="@+id/ingClose"
            android:layout_width="55dp"
            android:layout_height="22dp"
            android:text="모집완료"
            android:layout_marginLeft="15dp"
            android:textSize="11dp"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_shape_gray"/>

        <TextView
            android:id="@+id/boardTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="190dp"
            android:text="시간"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/whatType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingBtn"
            android:layout_marginStart="17dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#F532BA"
            android:text="밥운동등등"
            android:layout_marginTop="3dp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/boardMust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingBtn"
            android:layout_marginStart="11dp"
            android:textSize="12sp"
            android:textColor="#00f"
            android:text="필수기입항목"
            android:layout_marginTop="3dp"/>

    </LinearLayout>



    <TextView
        android:id="@+id/boardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boardMust"
        android:text="제목"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/boardContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boardTitle"
        android:text="내용"
        android:textColor="#000"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/writerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="12sp"
            android:layout_below="@+id/boardContent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boardContent"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/writerName"
            android:drawableLeft="@drawable/comment"
            android:text="  1"
            android:textSize="13sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>







</LinearLayout>